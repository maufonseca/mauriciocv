<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  tools:context=".presentation.snippetdetail.SnippetDetailActivity">

  <LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <ImageView
      android:padding="8dp"
      android:layout_marginTop="8dp"
      android:layout_marginStart="8dp"
      android:tint="@color/md_black_1000"
      android:src="@drawable/twotone_arrow_back_black_48"
      android:layout_width="48dp"
      android:layout_height="48dp"
      android:background="@drawable/ripple_white_to_grey"
      android:onClick="backTouched"/>

    <TextView
      android:id="@+id/title_textview"
      android:paddingStart="8dp"
      android:paddingEnd="8dp"
      android:paddingTop="24dp"
      android:paddingBottom="24dp"
      android:textColor="@color/md_black_1000"
      android:textSize="18sp"
      android:textStyle="bold"
      android:textAlignment="center"
      android:layout_width="match_parent"
      android:layout_height="wrap_content" />

    <TextView
      android:id="@+id/body_textview"
      android:lineSpacingExtra="2sp"
      android:textSize="18sp"
      android:paddingStart="16dp"
      android:paddingEnd="16dp"
      android:paddingTop="8dp"
      android:paddingBottom="16dp"
      android:layout_width="match_parent"
      android:layout_height="wrap_content" />
  </LinearLayout>
</ScrollView>